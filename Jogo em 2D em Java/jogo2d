public static void main (String args[]){
    Game inv = new Game();
}
public class Game extends Canvas

public Game (){
    JFrame windows = new JFrame ("Invasores do Espa√ßo");
    JPanel panel = (JPanel)windows.get ContentPane();
    setBounds(0, 0, Stage, WIDTH, Stage.HEIGHT);
    panel.setPreferredSize(new   Dimension(Stage.WIDHT, Stage HEIGHT));
    panel.setLayout (null);
    panel.add(this);
    windows.setBounds(0, 0, Stage.WIDTH, Stage.HEIGHT);
    windows.setResizable(false);
    windows.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    windows.setVisible(true);
    requestFocus();}
    